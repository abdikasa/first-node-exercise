extends layouts/main-layout.pug
        
block styles        
    link(rel="stylesheet", href="/css/product.css")

block content
        main
            if products.length > 0
                div.grid
                    each product in products
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://images-na.ssl-images-amazon.com/images/I/51XWy95kQjL._SX329_BO1,204,203,200_.jpg" alt="A Book")  
                            div.card__content
                                h2.product__price $19.99
                                p.product__description A very interesting book.. kinda, please buy.
                            .card__actions  
                                button.btn Add to Cart
            else
                h1 No products

                    
